<% if !@user_recommendations.empty?%>
  <div class="wrapper">
  <% @user_recommendations.each do |user| %>
    <div class="card" style="margin: 2rem auto 2rem auto; width: 100%; heigth: 50%">
      <div class="card-image">
          <figure class="image is-3by4">
            <% if user.avatar? %>
              <%= image_tag user.avatar.url %>
            <% else %>
              <img src="https://upload.wikimedia.org/wikipedia/commons/8/89/Portrait_Placeholder.png">
            <% end %>
          </figure>
      </div>
      <div class="card-content">
        <div class="media">
          <div class="media-content">
            <p class="title is-4"><%= user.name%></p>
          </div>
        </div>

        <div class="content">
          <%= user.description%>
        </div>
      </div>
        <div class="field is-grouped is-grouped-centered">
          <div class="control">
            <%= link_to "Rechazar", new_user_match_path(user_id: current_user.id, user_2_id: user.id, is_match: false), class: "button is-danger" %>
          </div>
          <div class="control">
            <%= link_to "Match!", new_user_match_path(user_id: current_user.id, user_2_id: user.id, is_match: true), class: "button is-primary" %>
          </div>
        </div>
    </div>
  <% end%>
  </div>
<% else %>
  <section class="hero is-primary" style="margin-top: 2rem; text-align: center">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
          No tienes recomendaciones por el momento :(
        </h1>
      </div>
    </div>
  </section>
<% end %>