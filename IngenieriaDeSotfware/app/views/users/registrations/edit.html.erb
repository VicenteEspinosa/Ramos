<div class="columns">
  <div class="column">
    <div class="edit-box">
      <h3 class="title is-3" style="text-align:center">Editar perfil</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, 'Email', class: "label" %>
          <div class="control">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :name, 'Nombre', class: "label" %>
          <div class="controll">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input" %>
          </div>
        </div>


        <div class="field">
          <% if f.object.avatar? %>
            <%= f.label :avatar, 'Cambiar foto de perfil', class: "label"%>
          <% else %>
            <%= f.label :avatar, 'Foto de perfil', class: "label"%>
          <% end %>
          <div class="control">
            <%= f.file_field :avatar, class: "label" %>
            <% if f.object.avatar? %>
              <%= image_tag f.object.avatar.url %>
            <% end %>
          </div>  
        </div>

        <div class="field">
          <%= f.label :city_id, 'Comuna', class: 'label'%>
          <div class="control">
            <div class="select">
              <%= f.collection_select(:city_id, City.all, :id, :name, {:prompt=>"Selecciona una comuna"}, {:required => true})%>
            </div>
          </div>
        </div>

        <div class="field">
          <%= f.label :birthdate, 'Fecha de nacimiento', class: "label" %>
          <div class="control">
            <%= f.date_field :birthdate, class: "input", max: Date.today %>
          </div>
        </div>

        <div class="field">
          <%= f.label :description, 'Descripción', class: "label" %>
          <div class="control">
            <%= f.text_area :description, autofocus: true, autocomplete: "description", class: "textarea" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :phone_number, 'Número de celular', class: "label" %>
          <div class="control">
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone number", class: "input" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password, 'Contraseña', class: "label" %> <i>(Déjala en blanco si no quieres cambiarla)</i>
          <div class="control">
            <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, 'Confirmar contraseña', class: "label" %>
          <div class="control">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :current_password, 'Contraseña actual', class: "label" %> <i>(Necesitamos tu contraseña para confirmar los cambios)</i><br />
          <div class="control">
            <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
          </div>
        </div>

        <div class="field">
          <div class="field is-grouped is-grouped-centered">
            <%= f.submit "Confirmar cambios", class: "button is-success is-light" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="column">
    <div class="edit-box">
      <h3 class="title is-3" style="text-align:center">Eliminar mi cuenta</h3>
        <div class="field">
          <div class="field is-grouped is-grouped-centered">
            <%= button_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete, class: "button is-danger is-light" %>
          </div>
        </div>
    </div>
  </div>
</div>