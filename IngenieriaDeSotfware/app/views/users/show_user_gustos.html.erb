<div class="table-box">
  <h3 class="title is-3" style="text-align:center">Mis gustos</h3>
  <% if not @user_gustos.empty? %>
    <table class="table is-bordered is-striped is-narrow is-hoverable">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Descripcion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @user_gustos.each do |gusto| %>
          <tr>
            <td><%= gusto.nombre %></td>
            <td><%= gusto.descripcion %></td>
            <td><%= link_to 'Ver detalles', gusto, class: "tag is-link is-light is-small" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h5 class="title is-5" style="text-align:center">AÃºn no tienes gustos agregados :(</h3>
  <% end %>
    <%= link_to 'Agregar gustos', gustos_path,  class: "button is-success is-light" %>
</div>
